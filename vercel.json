{
    "version": 2,
    "functions": {
        "api/**/*.js": {
            "runtime": "@vercel/node@2.15.11"
        }
    },
    "rewrites": [
        {
            "source": "/",
            "destination": "/src/frontend/index.html"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/src/frontend/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "VERCEL_DEPLOYMENT": "true"
    },
    "build": {
        "env": {
            "NODE_ENV": "production"
        }
    }
}