{
    "version": 2,
    "functions": {
        "api/**/*.js": {
            "runtime": "nodejs18.x",
            "maxDuration": 30
        }
    },
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build"
        }
    ],
    "rewrites": [
        {
            "source": "/",
            "destination": "/index.html"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        }
    ]
}