{
    "version": 2,
    "functions": {
        "api/**/*.js": {
            "runtime": "nodejs18.x",
            "maxDuration": 30
        }
    },
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build"
        }
    ],
    "installCommand": "npm install --include=dev && npm install mysql2 --save",
    "buildCommand": "npm run vercel-build",
    "outputDirectory": "public",
    "rewrites": [
        {
            "source": "/",
            "destination": "/index.html"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/$1"
        }
    ]
}